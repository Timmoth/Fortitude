@inject NavigationManager Nav
@inject RequestTracker Tracker
@using System.Text
@using System.Text.Json
@implements IDisposable
@inject ConnectedClientService Clients

<div class="max-w-6xl mx-auto p-4 space-y-6">
    <div class="bg-white shadow rounded-lg p-6 flex justify-between items-center">
        <div>
            <p class="text-gray-700"><span class="font-medium">Total Requests:</span> @Tracker.TotalRequests</p>
        </div>
        <div>
            <p class="text-gray-700"><span class="font-medium">Clients Connected:</span> @Clients.Count</p>
        </div>
        <button class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded shadow"
                @onclick="ClearRequests">Clear
        </button>
    </div>

    <!-- Recent Requests Table -->
    <div class="bg-white shadow rounded-lg overflow-x-auto">
        <h3 class="text-lg font-semibold p-6 pb-0">Recent Requests</h3>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
            <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Base URL</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Response</th>
            </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var r in Tracker.Requests.Reverse().Take(25))
            {
                var resp = Tracker.GetResponse(r.RequestId);
                <tr class="hover:bg-gray-50 cursor-pointer" @onclick="() => ToggleExpanded(r.RequestId)">
                    <td class="px-4 py-2 text-sm text-gray-700 whitespace-nowrap">@r.Time.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                    <td class="px-4 py-2 text-sm font-medium text-gray-700 whitespace-nowrap">@r.Method</td>
                    <td class="px-4 py-2 text-sm text-gray-700">@r.Route</td>
                    <td class="px-4 py-2 text-sm text-gray-700">@r.BaseUrl</td>
                    <td class="px-4 py-2 text-sm text-gray-700 whitespace-nowrap">
                        @if (resp != null)
                        {
                            <span class="text-green-600 font-semibold">âœ” @resp.Status</span>
                        }
                        else
                        {
                            <span class="text-gray-400 italic">Pending</span>
                        }
                    </td>
                </tr>

                @if (IsExpanded(r.RequestId))
                {
                    <tr class="bg-gray-50">
                        <td colspan="5" class="px-4 py-3 text-sm text-gray-700">
                            <div class="space-y-4">
                                <!-- Request Details -->
                                <div class="border-b pb-2">
                                    <span class="font-medium">Request Details:</span>
                                    <div>Protocol: @r.Protocol</div>
                                    <div>QueryString: @r.RawQuery</div>
                                    <div>User
                                        Agent: @(r.Headers.ContainsKey("User-Agent") ? string.Join(", ", r.Headers["User-Agent"]) : "Unknown")</div>

                                    <div>
                                        <span class="font-medium">Headers:</span>
                                        @if (r.Headers.Count > 0)
                                        {
                                            <pre class="bg-gray-100 p-2 rounded overflow-x-auto">
@string.Join("\n", r.Headers.Select(h => $"{h.Key}: {string.Join(", ", h.Value)}"))
                                                </pre>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">None</span>
                                        }
                                    </div>

                                    <div>
                                        <span class="font-medium">Query:</span>
                                        @if (r.Query.Count > 0)
                                        {
                                            <pre class="bg-gray-100 p-2 rounded overflow-x-auto">
@string.Join("\n", r.Query.Select(q => $"{q.Key}: {string.Join(", ", q.Value)}"))
                                                </pre>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">None</span>
                                        }
                                    </div>

                                    <div>
                                        <span class="font-medium">Cookies:</span>
                                        @if (r.Cookies.Count > 0)
                                        {
                                            <pre class="bg-gray-100 p-2 rounded overflow-x-auto">
@string.Join("\n", r.Cookies.Select(c => $"{c.Key}: {c.Value}"))
                                                </pre>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">None</span>
                                        }
                                    </div>

                                    <div>
                                        <span class="font-medium">Body:</span>
                                        @if (r.Body != null && r.Body.Length > 0)
                                        {
                                            var bodyText = Encoding.UTF8.GetString(r.Body);

                                            if (!string.IsNullOrWhiteSpace(r.ContentType) &&
                                                r.ContentType.Contains("json", StringComparison.OrdinalIgnoreCase))
                                            {
                                                try
                                                {
                                                    // Try to parse and pretty-print JSON
                                                    var jsonDoc = JsonDocument.Parse(bodyText);
                                                    bodyText = JsonSerializer.Serialize(jsonDoc, new JsonSerializerOptions
                                                    {
                                                        WriteIndented = true
                                                    });
                                                }
                                                catch
                                                {
                                                    // If parsing fails, just leave the raw string
                                                }
                                            }

                                            <pre class="bg-gray-100 p-2 rounded overflow-x-auto">@bodyText</pre>
                                        }
                                        else
                                        {
                                            <span class="text-gray-500">Empty</span>
                                        }
                                    </div>

                                    <div>
                                        <span class="font-medium">cURL:</span>
                                        <pre class="bg-gray-100 p-2 rounded overflow-x-auto">@r.ToCurl()</pre>

                                    </div>

                                </div>

                                <!-- Response Details -->
                                <div>
                                    <span class="font-medium">Response Details:</span>
                                    @if (resp != null)
                                    {
                                        <div>Status: <span class="font-semibold">@resp.Status</span></div>
                                        <div>Content-Type: @resp.ContentType</div>
                                        <div>
                                            <span class="font-medium">Headers:</span>
                                            @if (resp.Headers.Count > 0)
                                            {
                                                <pre class="bg-gray-100 p-2 rounded overflow-x-auto">
@string.Join("\n", resp.Headers.Select(h => $"{h.Key}: {h.Value}"))
                                                    </pre>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">None</span>
                                            }
                                        </div>
                                        <div>
                                            <span class="font-medium">Body:</span>
                                            @if (resp.Body != null && resp.Body.Length > 0)
                                            {
                                                var bodyText = Encoding.UTF8.GetString(resp.Body);

                                                if (!string.IsNullOrWhiteSpace(resp.ContentType) &&
                                                    resp.ContentType.Contains("json", StringComparison.OrdinalIgnoreCase))
                                                {
                                                    try
                                                    {
                                                        // Parse and pretty-print JSON
                                                        var jsonDoc = JsonDocument.Parse(bodyText);
                                                        bodyText = JsonSerializer.Serialize(jsonDoc, new JsonSerializerOptions
                                                        {
                                                            WriteIndented = true
                                                        });
                                                    }
                                                    catch
                                                    {
                                                        // If parsing fails, leave the raw string
                                                    }
                                                }

                                                <pre class="bg-gray-100 p-2 rounded overflow-x-auto">@bodyText</pre>
                                            }
                                            else
                                            {
                                                <span class="text-gray-500">Empty</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="text-gray-400 italic">Response pending...</div>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
</div>

@code {
    private readonly HashSet<Guid> _expandedRows = new();

    protected override void OnInitialized()
    {
        Tracker.OnUpdate += TrackerOnUpdate;
        Clients.OnChanged += TrackerOnUpdate;
    }

    private void TrackerOnUpdate()
    {
        InvokeAsync(StateHasChanged);
    }

    private void ToggleExpanded(Guid requestId)
    {
        if (_expandedRows.Contains(requestId))
            _expandedRows.Remove(requestId);
        else
            _expandedRows.Add(requestId);
    }

    private bool IsExpanded(Guid requestId)
    {
        return _expandedRows.Contains(requestId);
    }

    private void ClearRequests()
    {
        Tracker.Clear();
        _expandedRows.Clear();
    }

    public void Dispose()
    {
        Tracker.OnUpdate -= TrackerOnUpdate;
        Clients.OnChanged -= TrackerOnUpdate;
    }

}
