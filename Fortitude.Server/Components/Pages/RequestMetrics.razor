@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Nav
@inject RequestTracker Tracker
@implements IDisposable

<div class="max-w-5xl mx-auto p-4 space-y-6">
    <!-- Live Request Summary -->
    <div class="bg-white shadow rounded-lg p-6">
        <h2 class="text-xl font-semibold mb-2">Live Request Summary</h2>
        <p class="text-gray-700"><span class="font-medium">Total Requests:</span> @Tracker.TotalRequests</p>
    </div>

    <!-- Recent Requests Table -->
    <div class="bg-white shadow rounded-lg p-6 overflow-x-auto">
        <h3 class="text-lg font-semibold mb-4">Recent Requests</h3>
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Time</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Method</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Route</th>
                    <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Base URL</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var r in Tracker.Requests.Reverse().Take(25))
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 py-2 text-sm text-gray-700">@r.Time.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td class="px-4 py-2 text-sm text-gray-700 font-medium">@r.Method</td>
                        <td class="px-4 py-2 text-sm text-gray-700">@r.Route</td>
                        <td class="px-4 py-2 text-sm text-gray-700">@r.BaseUrl</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        Tracker.OnUpdate += TrackerOnUpdate;
    }

    private void TrackerOnUpdate()
    {
        // Always use InvokeAsync to marshal to the Blazor renderer thread
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        Tracker.OnUpdate -= TrackerOnUpdate;
    }
}
